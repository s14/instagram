<div class="page-header">
  <h1>Favoritings</h1>
</div>

<p><a href="/favoritings/new" class="btn btn-primary">Add a New Favoriting</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Photo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @favoritings.each do |favoriting| %>
      <tr>
        <td><%= favoriting.user_id %></td>
        <td><%= favoriting.photo_id %></td>
        <td>
          <a href="/favoritings/<%= favoriting.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/favoritings/<%= favoriting.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_favoriting/<%= favoriting.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

