<div class="page-header">
  <h1>Photo #<%= @photo.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Image url</dt>
  <dd><%= @photo.image_url %></dd>

  <dt>Caption</dt>
  <dd><%= @photo.caption %></dd>

  <dt>User</dt>
  <dd><%= @photo.user_id %></dd>

  <dt>Comments</dt>
  <dd>
    <ul>
      <% @photo.comments.each do |comment| %>
        <li><%= comment.content %></li>
      <% end %>
      <li>
        <form action="...">
          <input type="..." name="content" class="form-control">
          <input type="..." name="user_id" value="...">
          <input type="..." name="photo_id" value="...">
        </form>
      </li>
    </ul>
  </dd>
</dl>


